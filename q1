#include <iostream>
using namespace std;

int main() {
    int arr[100], n = 0, ch, pos, ele, i;

    do {
     
        cout << "1. CREATE\n";
        cout << "2. DISPLAY\n";
        cout << "3. INSERT\n";
        cout << "4. DELETE\n";
        cout << "5. LINEAR SEARCH\n";
        cout << "6. EXIT\n";
        cout << "------------------\n";
        cout << "Enter your choice: ";
        cin >> ch;

        switch(ch) {
            case 1:
                cout << "Enter number of elements: ";
                cin >> n;
                cout << "Enter " << n << " elements:\n";
                for(i = 0; i < n; i++)
                    cin >> arr[i];
                cout << "Array created successfully\n";
                break;

            case 2:
                if(n == 0) {
                    cout << "Array is empty\n";
                    break;
                }
                cout << "Array elements are:\n";
                for(i = 0; i < n; i++)
                    cout << arr[i] << " ";
                cout << endl;
                break;

            case 3:
                cout << "Enter position to insert (0-based index): ";
                cin >> pos;
                if(pos < 0 || pos > n) {
                    cout << "Invalid position\n";
                    break;
                }
                cout << "Enter element: ";
                cin >> ele;
                for(i = n; i > pos; i--)
                    arr[i] = arr[i - 1];
                arr[pos] = ele;
                n++;
                cout << "Element inserted\n";
                break;

            case 4:
                cout << "Enter position to delete (0-based index): ";
                cin >> pos;
                if(pos < 0 || pos >= n) {
                    cout << "Invalid position\n";
                    break;
                }
                for(i = pos; i < n - 1; i++)
                    arr[i] = arr[i + 1];
                n--;
                cout << "Element deleted\n";
                break;

            case 5:
                cout << "Enter element to search: ";
                cin >> ele;
                for(i = 0; i < n; i++) {
                    if(arr[i] == ele) {
                        cout << "Element found at position " << i << endl;
                        break;
                    }
                }
                if(i == n)
                    cout << "Element not found\n";
                break;

            case 6:
                cout << "Exiting program\n";
                break;

            default:
                cout << "Invalid choice\n";
        }
    } while(ch != 6);

    return 0;
}
